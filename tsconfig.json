{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "build",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "types": ["jest"]
  },
  "exclude": ["node_modules","**/tests/**"],
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.js",
    "tools/**/*.js",
    "tools/**/*.ts"
  ]
}

