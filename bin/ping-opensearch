#!/bin/bash
# from https://stackoverflow.com/questions/11904772/how-to-create-a-loop-in-bash-that-is-waiting-for-a-webserver-to-respond
attempt_counter=0
max_attempts=40

until $(curl --output /dev/null --max-time 10 --silent --head --fail http://opensearch-container:9200); do
    if [ ${attempt_counter} -eq ${max_attempts} ];then
      echo "Max attempts reached"
      exit 1
    fi

    attempt_counter=$(($attempt_counter+1))
    sleep 10
done