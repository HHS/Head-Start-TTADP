{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../build/server",
    "skipLibCheck": true,
    "incremental": true,
    "resolveJsonModule": true, 
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "declaration": false,
    "allowJs": true,
    "removeComments": true,
  },
  "include": [
    "./**/*.js",
    "./**/*.ts",
    "../tools/**/*",
    "../tests/utils/**/*",
    "../bin/**/*.js"
  ]
}
